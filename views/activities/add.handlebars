<h1>Add Activity</h1>
<div class="row">
    <form action="/activities" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" name="title">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="Unpublished">Unpublished</option>
                </select>
                <label for="title">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <label>
                    <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" checked="checked">
                    <span>Allow Comments</span>
                </label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Explain Your Activity:</h5>
                <textarea name="body"></textarea>
            </div>
        </div>

        <input type="submit" value="Save" name="submit" class="btn">
    </form>
</div>