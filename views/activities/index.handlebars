<h4>Activities</h4>
<div class="row">
    {{#each activities}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <a href="/activities/edit/{{id}}" class="btn-floating halfway-fab teal lighten-1">
                        <i class="fa fa-pencil"></i>
                    </a>
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p class="story-text">{{truncate (stripTags body) 150}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        {{user.firstName}} {{user.lastName}}
                    </div>
                </div>
                <div class="card-action center-align">
                    <a class="btn purple darken-2" href="/activities/show/{{id}}">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No activities found currently</p>
    {{/each}}

</div>