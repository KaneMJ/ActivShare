<h4>Activities</h4>
<div class="row">
    {{#each activities}}
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-image">
                    {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class="card-content center-align">
                    <h5 class="activityTitle">{{truncate title 18}}</h5>
                    <br>
                    <p class="story-text">{{truncate (stripTags body) 150}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        <a href="/activities/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a class="btn purple darken-2" href="/activities/show/{{id}}">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No activities found currently</p>
    {{/each}}

</div>